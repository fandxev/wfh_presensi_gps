<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplikasipresensizmg_duplicate_develop">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.example.aplikasipresensizmg_duplicate_develop.MyApplication"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/icon_zmg_duplicate_develop"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_zmg_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.AplikasiPresensiZmg"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.aplikasipresensizmg_duplicate_develop.TampilErrorActivity"
            android:exported="false" />
        <!-- START PROVIDER UNTUK TAKE CAMERA -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.aplikasipresensizmg_duplicate_develop.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths_tutorial" />
        </provider> <!-- END PROVIER UNTUK TAKE CAMERA -->
        <activity
            android:name="com.example.aplikasipresensizmg_duplicate_develop.LoginActivity"
            android:exported="true"
            android:noHistory="true">

            <!-- start launcher utama disini -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- end launcher utama disini -->
        </activity>
        <activity
            android:name="com.example.aplikasipresensizmg_duplicate_develop.MainActivityKotlin"
            android:exported="true"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>